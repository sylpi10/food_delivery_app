<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/slate/bootstrap.min.css">
		<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.1/dist/leaflet.css" integrity="sha256-sA+zWATbFveLLNqWO2gtiw3HL/lh1giY/Inf1BJ0z14=" crossorigin=""/>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" href="#">Navbar</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link active" href="{{path('home')}}">Home
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('restaurant')}}">Restaurants</a>
						</li>
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link text-danger" href="{{path('logout')}}">Logout</a>
							</li>
							<li class="nav-item">
								<span class="nav-link text-warning">{{app.user}}</span>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_register')}}">Register</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_login')}}">Login</a>
							</li>
						{% endif %}

						<li class="nav-item">
							<a class="nav-link" href="#">About</a>
						</li>

					</ul>

				</div>
			</div>
		</nav>
		<script src="https://unpkg.com/leaflet@1.9.1/dist/leaflet.js" integrity="sha256-NDI0K41gVbWqfkkaHj15IzU7PtMoelkzyKp8TOaFQ3s=" crossorigin=""></script>
		<div class="container mt-4"> {% block body %}{% endblock %}
			</div>
		</body>

	</html>
